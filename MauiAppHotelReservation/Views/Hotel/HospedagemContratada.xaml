<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotelReservation.Views.Hotel.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#F5DEB3" Offset="0.2"/>
            <GradientStop Color="#B8860B" Offset="0.9"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <!-- Binding Context utilizado na página é criado na página ContratacaoHospedagem.xaml.cs na linha 60 -->
    
    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center"
                             Spacing="10"
                             Margin="10, 50">
            <Label 
                Text="{Binding QuartoSelecionado.Descrição}"
                HorizontalOptions="Center"
                FontSize="Header"
                FontFamily="LavishlyYoursRegular"
                Padding="0,0,0,10"/>

            <Label
                Text="Reserva Confirmada"
                FontSize="Subtitle"
                Margin="0,0,0,35"/>

            <!-- Grid de Hospedes -->
            <Frame Margin="10, 0">
                <VerticalStackLayout>
                    <Label
                        Text="Hospedes"
                        HorizontalTextAlignment="Center"
                        Padding="0, 0, 0, 20"/>
                    <Grid ColumnDefinitions="*, *, *, *">
                        
                        <!-- Adultos -->
                        <Label
                            Text="Adultos:"/>
                        <Label
                            Text="{Binding QuantidadeAdultos}"
                            Grid.Column="1"/>
                        
                        <!-- Crianças -->
                        <Label
                            Text="Crianças:"
                            Grid.Column="2"/>
                        <Label
                            Text="{Binding QuantidadeCriancas}"
                            Grid.Column="3"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Grid de Check-in & Check-out -->
            <Frame Margin="10, 5">
                <VerticalStackLayout>
                    <Grid RowDefinitions="Auto, Auto"
                          ColumnDefinitions="*, *, *"
                          RowSpacing="10">
                        
                        <!-- Layout Check-In -->
                        <Label
                            Text="Check-In:"/>
                        <Label
                            Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                            Grid.Row="1"/>

                        <!-- layout Check-Out -->
                        <Label
                            Text="Check-out:"
                            Grid.Column="1"/>
                        <Label
                            Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                            Grid.Row="1"
                            Grid.Column="1"/>
                        
                        <!-- Layout Estadia -->
                        <Label
                            Text="Estadia (Dias):"
                            Grid.Column="2"/>
                        <Label
                            Text="{Binding Estadia}"
                            Grid.Row="1"
                            Grid.Column="2"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Grid valor total -->
            <Frame Margin="10, 5">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label
                       Text="Valor total da Reserva: "
                       Margin="0,0,10,0"/>
                    <Label
                        Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Botão de confirmação -->
            <Button
                x:Name="btn_confirma_reserva"
                Text="Retornar ao menu"
                Margin="10, 5"
                BackgroundColor="#d2691e"
                Clicked="btn_confirma_reserva_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>