<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotelReservation.Views.Hotel.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             xmlns:local="clr-namespace:MauiAppHotelReservation.Views.Hotel"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#F5DEB3" Offset="0.2"/>
            <GradientStop Color="#B8860B" Offset="0.9"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center"
                             Padding="10"
                             Spacing="15"
                             Margin="10, 20, 10, 50">
            
            <Label 
                Text="Bem Vindo(a) Hotel Dreams "
                FontSize="Title"
                HorizontalOptions="Center" />

            <Label
                Text="Escolha sua estadia"
                FontSize="Subtitle"
                HorizontalTextAlignment="Center"/>

            <Frame Padding="10">
                <VerticalStackLayout Spacing="15"
                                     Padding="10">
                    <Grid RowDefinitions = "Auto,Auto"
                          ColumnDefinitions= "*, *, 1.5*"
                          RowSpacing="15">

                        <!-- Labels de Nomes 1ª fileira -->
                        <Label
                            Grid.Row="0" Grid.Column="0"
                            Text="Adultos:"/>
                        <Label
                            Grid.Row="1" Grid.Column="0"
                            Text="Crianças:"/>


                        <!-- Stepper e Label da primeira linha (adultos) -->
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Value}"
                               BindingContext="{x:Reference stp_adultos}"
                               Margin="50, 0, 25, 0"/>
                        <Stepper 
                            Grid.Row="0" Grid.Column="2"
                            x:Name="stp_adultos"
                            Minimum="1"
                            Maximum="10"
                            Increment="1"
                            Margin="50, 0, 25, 0"/>

                        <!-- Stepper e Label da segunda linha (crianças) -->
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Value}"
                               BindingContext="{x:Reference stp_criancas}"
                               Margin="50, 0, 25, 0"/>
                        <Stepper 
                            Grid.Row="1" Grid.Column="2"
                            x:Name="stp_criancas"
                            Minimum="0"
                            Maximum="10"
                            Increment="1"
                            Margin="50, 0, 25, 0"/>
                    </Grid>
                    
                    <!-- Layout do escolha sua suite (Label e Picker) -->
                    <Label
                        Text="Escolha uma suite"
                        FontSize="Subtitle"
                        HorizontalTextAlignment="Center"
                        Margin="0, 20, 0, 0"/>
                    <Picker
                        x:Name="pck_quarto"
                        Title="Selecione a sua Acomodação"
                        ItemDisplayBinding="{Binding Descrição}"/>

                    <!-- Layout do Período de estadia -->
                    <Frame Padding="15"
                           Margin="10">
                        <VerticalStackLayout Spacing="15">
                            <Label
                                Text="Período de estadia"
                                FontSize="Medium"
                                HorizontalTextAlignment="Center"/>
                            <HorizontalStackLayout>
                                <Label 
                                    Text="Check-in:"
                                    Margin="0,10"
                                    FontSize="Small"/>
                                <DatePicker
                                    x:Name="dtpck_check_in"
                                    DateSelected="dtpck_check_in_DateSelected"
                                    Format="dd/MM/yyyy"
                                    Margin="20,0,0,0"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout>
                                <Label 
                                    Text="Check-out:"
                                    Margin="0,10"
                                    FontSize="Small"/>
                                <DatePicker
                                    x:Name="dtpck_check_out"
                                    Format="dd/MM/yyyy"
                                    Margin="20,0,0,0"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <Button
                        x:Name="btn_avancar"
                        Text="Confirmar estádia"
                        BackgroundColor="#d2691e"
                        Clicked="btn_avancar_Clicked"/>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>